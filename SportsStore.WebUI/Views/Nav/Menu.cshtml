@model IEnumerable<string>
<div class="mt-3"></div>
@Html.ActionLink("Home", "List", "Product", null,
new { @class = "btn btn-block btn-lg " + (ViewBag.SelectedCategory == null ? "btn-primary" : "btn-secondary") })
@foreach (var link in Model)
{
    @Html.RouteLink(link, new
    {
        controller = "Product",
        action = "List",
        category = link,
        page = 1
    }, new
    {
        @class = "btn btn-block btn-lg " + (link == ViewBag.SelectedCategory ? "btn-primary" : "btn-secondary")
    })
}
